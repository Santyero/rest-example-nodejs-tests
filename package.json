{
    "name": "test-api",
    "version": "1.0.0",
    "description": "API REST para testes automatizados",
    "main": "src/server.js",
    "scripts": {
        "start": "node src/server.js",
        "dev": "nodemon src/server.js",
        "test": "jest --detectOpenHandles",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:supertest": "jest --testMatch='**/__tests__/**/*.supertest.js'",
        "test:integration": "jest --testMatch='**/__tests__/integration/**/*.test.js'",
        "test:unit": "jest --testMatch='**/__tests__/unit/**/*.test.js'",
        "test:health": "jest --testMatch='**/__tests__/health/**/*.test.js'"
    },
    "dependencies": {
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-validator": "^7.0.1",
        "jsonwebtoken": "^9.0.2",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "axios": "^1.6.2",
        "jest": "^29.7.0",
        "nodemon": "^3.0.1",
        "supertest": "^6.3.4"
    }
}
